<%- include('layout.ejs') %>
<h2><%= post ? 'Edit Post' : 'New Post' %></h2>
<form action="<%= post ? '/posts/edit/' + post._id : '/posts' %>" method="POST">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= post ? post.title : '' %>" required>
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" id="content" name="content" required><%= post ? post.content : '' %></textarea>
    </div>
    <button type="submit" class="btn btn-primary"><%= post ? 'Update Post' : 'Create Post' %></button>
</form>
